(program is_all_eq ((xs Bool :list) (x Bool) (y Bool))
  :signature (Bool Bool) Bool
  (
  ((is_all_eq (and x xs) x) (is_all_eq xs x))
  ((is_all_eq x x) true)
  )
)

(declare-rare-rule and_is_true ((x Bool :list)) 
  :args (x)
  :premises ((= (is_all_eq x true) true))
  :conclusion (= (or x true) true)
  )